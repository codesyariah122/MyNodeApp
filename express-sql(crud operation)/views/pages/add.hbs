<div class="row">
	<div class="col-12">

		<h4 class="text-muted text-center">
			{{header}}
		</h4>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		{{#if success}}
			<p class="alert alert-success">
				{{text}} : 
				<a href="/detail/{{id}}">View Product</a>
			</p>
		{{/if}}

			{{#if errors}}
				{{#each errors as |data|}}
					<p class="alert alert-danger">{{data.msg}}</p>
				{{/each}}
			{{/if}}
		
			<form action="/save" method="post">
			  <div class="form-group">
			    <label for="name">Product Name</label>
			    <input type="text" name="name" class="form-control" id="name" placeholder="Nameof Product">
			  </div>
			  <div class="form-group">
			    <label for="price">Product Price</label>
			    <input type="text" name="price" class="form-control" id="price" placeholder="Priceof Product">
			  </div>
			  <div class="form-group">
			    <label for="image">Product Image</label>
			    <input type="text" name="image" class="form-control" id="image" placeholder="Productname.jpg">
			  </div>
			  <div class="form-group">
			    <label for="categories">Product Categories</label>
			    <input type="text" name="categories" class="form-control" id="categories" placeholder="Categoriesof Product">
			  </div>
			  <div class="form-group">
			    <label for="description">Product Description</label>
			     <textarea class="form-control" id="description" name="description" rows="3"></textarea>
			  </div>

			  <button type="submit" class="btn btn-primary" name="add">Add Product</button>
			</form>

	</div>
</div>
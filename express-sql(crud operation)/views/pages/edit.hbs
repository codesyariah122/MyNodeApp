<div class="row">
	<div class="col-12">

		<h4 class="text-muted text-center">
			{{header}}
		</h4>
	</div>
</div>

<div class="row">
	<div class="col-md-12">

			<form action="/update/{{products.id}}" method="post">
			  <div class="form-group">
			    <label for="name">Product Name</label>
			    <input type="text" name="name" class="form-control" id="name" placeholder="Nameof Product" value="{{products.name}}">
			  </div>
			  <div class="form-group">
			    <label for="price">Product Price</label>
			    <input type="text" name="price" class="form-control" id="price" placeholder="Priceof Product" value={{products.price}}>
			  </div>
			  <div class="form-group">
			    <label for="image">Product Image</label>
			    <input type="text" name="image" class="form-control" id="image" placeholder="Productname.jpg" value="{{products.image}}">
			  </div>
			  <div class="form-group">
			    <label for="categories">Product Categories</label>
			    <input type="text" name="categories" class="form-control" id="categories" placeholder="Categoriesof Product" value="{{products.categories}}">
			  </div>
			  <div class="form-group">
			    <label for="description">Product Description</label>
			     <textarea class="form-control" id="description" name="description" rows="3">{{products.description}}</textarea>
			  </div>

			  <button type="submit" class="btn btn-primary" name="update">Update Product</button>
			</form>

	</div>
</div>